@model List<UserFile>
@{
    ViewData["Title"] = "Files";
}
@section Scripts
    {
    <script>
        $(document).ready(function () {
            var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]';
            if (hasStartCreatingExcel) {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-right',
                    iconColor: 'white',
                    customClass: {
                        popup: 'colored-toast'
                    },
                    showConfirmButton: false,
                    timer: 2500,
                    timerProgressBar: true
                })
                Toast.fire({
                    icon: 'success',
                    title: 'Excel oluşturma işlemi başlamıştır'
                })
            }
        })
    </script>
}
<h1>Files</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a class="btn btn-sm btn-primary @(item.FileStatus == FileStatus.Creating ? "disabled" : "")" href="~/files/@item.FilePath">
                    Download

                </a>
            </td>
        </tr>
    }
</table>
